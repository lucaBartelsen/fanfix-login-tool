{
  "manifest_version": 3,
  "name": "FanFix Login Manager",
  "version": "1.0",
  "description": "Manage and switch between FanFix accounts",
  "permissions": [
    "storage",
    "tabs",
    "cookies",
    "webRequest"
  ],
  "host_permissions": [
    "https://auth.fanfix.io/*",
    "https://fanfix.io/*",
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}